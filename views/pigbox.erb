<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="descripion" content="">
		<title>My Title</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/foundation/5.2.3/css/foundation.min.css">
		<link rel="stylesheet" href="../styles/style.css">
	</head>
	<body>
		<div class="row main-box">
			<div class="large-8 small-8 column">
				<div class="panel">
					<div class="large-5 small-5 large-centered small-centered column"> Enter a phrase to translate!!</div>
						<form name = "input"  action= "/" method= "post">
							<div>
							  <input type="text" id="to_translate" name="to_translate" />
							</div>
							<div class="small-3 large-3 small-centered large-centered columns">
							  <input type="submit" value="Translate" class="translate button">
							</div>
						</form>
						<div class="row">
							<div class="small-4 large-4 columns">				
								<h3>Translation:</h3>
							</div>
							<div class="small-8 large-8 columns">				
								<%@translation = PigLatin.translate(@to_translate)%>
								<p> <%= @translation %> <p>
							</div>
						</div>
					</div>				
				</div>
			</div>

		</div>

		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script type="text/javascript" src="js/businesslogic.js"></script>
	</body>
</html>

 